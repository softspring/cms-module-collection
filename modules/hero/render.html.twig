<section class="sfs-hero px-4 py-5 text-center {{ class|default('') }} {{ fullpage|default('') }}" id="{{ id|default('') }}" style="{{ bg_color|default(false) ? 'background-color:'~bg_color : '' }}">
    {% if background[app.request.locale]|default(false) %}
        <div class="sfs-hero__bg-media">
            {{ background[app.request.locale]|sfs_media_render_picture }}
        </div>
    {% endif %}
    <div class="sfs-hero__content container">

        {% if other[app.request.locale]|default(false) %}
        <div class="sfs-hero__image">
            {{ other[app.request.locale]|sfs_media_render_image('_original') }}
        </div>
        {% endif %}
        <h1 class="sfs-hero__title {{ title_class|default('') }}">{{ title|sfs_cms_trans|raw }}</h1>
        <div class="col-md-10 col-lg-8 mx-auto">
            {% if description|default(false) %}<div class="lead mb-4">{{ description|sfs_cms_trans|raw }}</div>{% endif %}
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                {% if primary_button_text|default(false) and primary_button_text|sfs_cms_trans is not empty %}
                    <a href="{{ primary_button_link|default(false) ? path(primary_button_link) : '#' }}" {{ sfs_cms_route_attr(primary_button_link)}} class="btn btn-primary btn-lg px-4 gap-3">{{ primary_button_text|sfs_cms_trans|raw }}</a>
                {% endif %}

                {% if secondary_button_text|default(false) and secondary_button_text|sfs_cms_trans is not empty  %}
                    <a href="{{ secondary_button_link|default(false) ? path(secondary_button_link) : '#' }}" {{ sfs_cms_route_attr(secondary_button_link)}} class="btn btn-outline-secondary btn-lg px-4">{{ secondary_button_text|sfs_cms_trans|raw }}</a>
                {% endif %}
            </div>
        </div>
    </div>
</section>
