{% set id = id|default %}
{% set button_style = button_style|default %}
{% set button_classes = button_classes|default %}
{% set button_text = button_text|default %}
{% apply spaceless %}
    {% import '@SfsCms/macros/modules_render.html.twig' as module %}
    {% if button_text and button_text|sfs_cms_trans is not empty %}
        <a {{ sfs_cms_link_attr(button_link) }} {{ module.id(id) }} {{ module.class(button_style, button_classes) }}>{{ button_text|sfs_cms_trans|raw }}</a>
    {% endif %}
{% endapply %}
