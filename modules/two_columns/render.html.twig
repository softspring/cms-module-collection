<article class="two-columns py-5 {{ class|default('') }}" id="{{ id|default('') }}" style="{{ bg_color|default(false) ? 'background-color:'~bg_color : '' }}">
    {% if background[app.request.locale]|default(false) %}
        <div class="hero__bg-picture">
            {{ background[app.request.locale]|sfs_media_render_picture }}
        </div>
    {% endif %}
    <div class="container">
        <div class="row {{ image_position_text|default('flex-row') }}">
            <div class="col-12 col-md-6">
                {% if module_image[app.request.locale]|default(false) %}
                {{ module_image[app.request.locale]|sfs_media_render_image(['sm'], {'class':'img-fluid'}) }}
                {% endif %}
            </div>
            <div class="col-12 col-md-6">
                <h2 class="two-columns__title {{ title_class|default('') }}">{{ title|sfs_cms_trans|raw }}</h2>
                <div class="two-columns__desc">
                    {% if description|default(false) %}{{ description|sfs_cms_trans|raw }}{% endif %}
                </div>
                {% if primary_button_text|sfs_cms_trans|default(false) %}
                    <div class="two-columns__cta">
                        <a href="{{ primary_button_link|default(false) ? sfs_cms_path(primary_button_link) : '#' }}" class="btn btn-primary">{{ primary_button_text|sfs_cms_trans|raw }}</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</article>






