<div class="sfs-card h-100 {{ class|default('') }} {{ content_position|default('') }}" id="{{ id|default('') }}" style="{{ bg_color|default(false) ? 'background-color:'~bg_color : '' }}">
    {% if background[app.request.locale]|default(false) %}
        <div class="sfs-card__bg-media">
            {{ background[app.request.locale].media|sfs_media_render(background[app.request.locale].version) }}
        </div>
    {% endif %}
    <div class="sfs-card__content {{ form.content_position.vars.value|default('') }}">
        {% if media[app.request.locale]|default(false) %}
        <div class="sfs-card__media">
            {{ media[app.request.locale].media|sfs_media_render(media[app.request.locale].version, {'class':'img-fluid'}) }}
        </div>
        {% endif %}
        <div class="sfs-card__texts">
            <{{ title_type }} class="sfs-card__title {{ title_class|default('') }}">{{ title|sfs_cms_trans|raw }}</{{ title_type }}>
            {% if description|default(false) %}<div class="sfs-card__desc mb-4">{{ description|sfs_cms_trans|raw }}</div>{% endif %}
            <div class="sfs-card__cta">
                {% if primary_button_text|default(false) and primary_button_text|sfs_cms_trans is not empty %}
                    <a href="{{ sfs_cms_url(primary_button_link) }}" {{ sfs_cms_route_attr(primary_button_link)}} class="{{ primary_button_class|default('btn btn-primary') }}">{{ primary_button_text|sfs_cms_trans|raw }}</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
