<div
     id="{{ form.id.vars.data|default('') }}"
     data-edit-id-target="wysiwygId"

    {% set defaultWysiwygClass = 'sfs-wysiwyg-trans text-break content-escape' %}
     class="{{ defaultWysiwygClass }} {{ form.class.vars.data|default('') }}"
     data-edit-class-target="wysiwygClass"
     data-edit-class-default="{{ defaultWysiwygClass }}"

     data-edit-content-target="content"
     data-edit-content-escape="true"
>
    {% for locale,localeField in form.content %}
        <div class="wysiwyg-preview"
             data-edit-content-target="content.{{ locale }}"
             data-lang="{{ locale }}"
             data-bs-toggle="modal"
             data-bs-target="#{{ id }}Modal"
             data-default-text="Enter your translatable text">
            {{ localeField.vars.data|default('Enter your translatable text')|raw }}
        </div>
    {% endfor %}
</div>
