{% import '@SfsCms/macros/modules_edit.html.twig' as module %}

{% for locale,localeField in form.content.vars.localeFields %}
    <article
            {{ module.link_id(form.id) }}
            {{ module.link_class(form.class, 'sfs-wysiwyg text-break content-escape') }}
            {{ module.link_content(localeField, locale, true, null, false, false, true) }}
            data-edit-content-escape="false"
    >
        {{ localeField.vars.data|default|raw }}
    </article>
{% endfor %}
